# Server Configuration
PORT=3000

# OCR API Configuration
OCR_PORT=3001
OCR_API_URL=http://localhost:3001

# Environment
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# PM2 Configuration
PM2_INSTANCE_COUNT=1
PM2_MAX_MEMORY_RESTART=1G
PM2_KILL_TIMEOUT=5000
PM2_RESTART_DELAY=1000
PM2_MAX_RESTARTS=10
PM2_MIN_UPTIME=10s

# Optional: Database Configuration (if needed in the future)
# DATABASE_URL=
# REDIS_URL=

# Optional: External Service URLs
# EXTERNAL_API_BASE_URL=
# WEBHOOK_URL=
